# ============================================
# IdroDesk Backend - Environment Variables
# ============================================
# Copia questo file come .env e compila i valori

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/idrodesk?schema=public

# ============================================
# SERVER
# ============================================
PORT=3001

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=changeme-super-secret-key-min-32-chars

# ============================================
# STRIPE PAYMENT
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# REDIS (per BullMQ workers)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR=./uploads

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
